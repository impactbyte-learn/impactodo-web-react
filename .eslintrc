{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": 2
  },
  "plugins": ["flowtype", "react"],
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended"
  ]
}
